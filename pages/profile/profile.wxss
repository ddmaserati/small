/* pages/profile/profile.wxss */
.view {
  background-color: #f5f5f5;
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.profile_info {
  display: flex;
  flex-direction: row;
  background-color: #f5f5f5;
  width: 100%;
  height: 170rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-top: 40rpx;
  font-size: 14px;
}

.order_tips {
  background-color: white;
  padding: 10px;
  font-size: 14px;
}

.order {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.order_item {
  font-size: 12px;
  height: 100rpx;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item {
  margin-top: 20rpx;
  padding: 20rpx;
  font-size: 11pt;
  color: #353535;
  background-color: white;
}
