 /* pages/profile/profile.wxss */


.profile_info
{
   display: flex;
  flex-direction:row; 
  background-color: #F5F5F5;
  width: 100%;
  height: 170rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  margin-top: 40rpx;
  font-size: 14px;
}


.order_tips
{
  padding: 10px;
  font-size: 14px;
}

.order{
  width: 100%;
  display: flex;
  flex-direction:row; 
}

.order_item{
  font-size: 12px;
  height: 100rpx;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view_line{
  background-color: #f5f5f5;
  width: 100%;
  height: 10px;
}

.item{
  padding: 15px;
  font-size: 16px;
}